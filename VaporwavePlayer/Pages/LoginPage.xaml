<Page x:Class="VaporwavePlayer.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VaporwavePlayer"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Border Background="{StaticResource NonActivePanelBrush}">
        <Grid>
            <Grid.Background>
                    <ImageBrush TileMode="None"
                                ImageSource="../resources/backgrounds/Sunset_vaporwave.jpg"
                                RenderOptions.BitmapScalingMode="Fant"/>
             </Grid.Background>
             
            
        </Grid>
    </Border>
</Page>
